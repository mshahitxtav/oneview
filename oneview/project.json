{
  "name": "oneview",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "prefix": "app",
  "sourceRoot": "oneview/src",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@analogjs/platform:vite",
      "options": {
        "configFile": "oneview/vite.config.ts",
        "main": "oneview/src/main.ts",
        "outputPath": "dist/oneview/client",
        "tsConfig": "oneview/tsconfig.app.json"
      },
      "defaultConfiguration": "production",
      "configurations": {
        "development": {
          "mode": "development"
        },
        "production": {
          "sourcemap": false,
          "mode": "production"
        }
      },
      "outputs": ["{workspaceRoot}/dist/apps/oneview"]
    },
    "serve": {
      "executor": "@analogjs/platform:vite-dev-server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "oneview:build",
        "port": 4200,
        "proxyConfig": "oneview/src/proxy.conf.json"
      },
      "configurations": {
        "development": {
          "buildTarget": "oneview:build:development",
          "hmr": true
        },
        "production": {
          "buildTarget": "oneview:build:production"
        }
      }
    },
    "extract-i18n": {
      "executor": "@angular/build:extract-i18n",
      "options": {
        "buildTarget": "oneview:build"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "test": {
      "executor": "@analogjs/vitest-angular:test",
      "options": {
        "config": "vite.config.ts"
      }
    },
    "serve-static": {
      "continuous": true,
      "executor": "@nx/web:file-server",
      "options": {
        "buildTarget": "oneview:build",
        "port": 4200,
        "staticFilePath": "dist/oneview/browser",
        "spa": true
      }
    }
  }
}
